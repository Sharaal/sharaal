{% for reference in references %}
  <div class="row marketing">
    <div class="col-md-3">
      <a href="{{ reference.image }}" data-lightbox="references" data-title="{{ reference.title }}">
        <img src="{{ reference.thumbnail }}" alt="" class="img-thumbnail" />
      </a>
    </div>
    <div class="col-md-9">
      <h4>{{ reference.title }}</h4>
      <p class="text-justify">{{ reference.description }}</p>
      <small><a href="{{ reference.url }}" target="_blank">{{ reference.url }}</a></small>
    </div>
  </div>
{% endfor %}
<hr>
